# ============================================
# AMRAVATI E-LIBRARY PORTAL - ENVIRONMENT SETUP
# ============================================

# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================
# DATABASE CONNECTION
# ============================================
# Format: postgresql://username:password@host:port/database
# Replace 'your_password' with your PostgreSQL password

DATABASE_URL=postgresql://postgres:your_password@localhost:5432/elibrary

# ============================================
# OPENAI API KEY (for AI-powered book summaries)
# ============================================
# Get from: https://platform.openai.com/api-keys
# Leave empty to disable AI summaries feature

OPENAI_API_KEY=sk-your-actual-api-key-here

# ============================================
# SESSION SECRET
# ============================================
# Used for session encryption - can be any random string
# Generate a strong secret for production

SESSION_SECRET=your-very-secret-session-key-change-this-in-production

# ============================================
# SERVER PORT
# ============================================
# Default: 5000
# Change if port is already in use

PORT=5000

# ============================================
# NODE ENVIRONMENT
# ============================================
# Options: development, production
# Default: development

NODE_ENV=development

# ============================================
# OPTIONAL: PostgreSQL Connection Details
# ============================================
# These are parsed from DATABASE_URL but can be set individually
# Usually not needed if DATABASE_URL is set correctly

# PGHOST=localhost
# PGPORT=5432
# PGUSER=postgres
# PGPASSWORD=your_password
# PGDATABASE=elibrary
